<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>BookInCart</servlet-name>
        <servlet-class>com.intexsoft.servlets.BookInCart</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StartPage</servlet-name>
        <jsp-file>/StartPage.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>PersonServlet</servlet-name>
        <servlet-class>com.intexsoft.servlets.PersonServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BookServlet</servlet-name>
        <servlet-class>com.intexsoft.servlets.BookServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BookInOrder</servlet-name>
        <servlet-class>com.intexsoft.servlets.BookInOrder</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>BookInCart</servlet-name>
        <url-pattern>/bookInCart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StartPage</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PersonServlet</servlet-name>
        <url-pattern>/person</url-pattern>
    </servlet-mapping>
<servlet-mapping>
    <servlet-name>BookServlet</servlet-name>
    <url-pattern>/book</url-pattern>
</servlet-mapping>
    <servlet-mapping>
        <servlet-name>BookInOrder</servlet-name>
        <url-pattern>/bookInOrder</url-pattern>
    </servlet-mapping>
</web-app>